@using BookShop.Models.EF
@model List<OrderDetail>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Danh sách chi tiết đơn hàng
}
<div class="row-fluid sortable ui-sortable">
    <div class="box span12">
        <div class="box-header" data-original-title="">
            <h2><i class="halflings-icon user"></i><span class="break"></span> Danh sách chi tiết đơn hàng </h2>
        </div>
        <div class="box-content">
            <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper" role="grid">
                <table class="table table-striped table-bordered bootstrap-datatable datatable dataTable" id="DataTables_Table_0" aria-describedby="DataTables_Table_0_info">
                    <thead>
                        <tr>
                            <th>Mã đơn hàng</th>
                            <th>Mã sách</th>
                            <th>Số lượng</th>
                            <th>Giá sách</th>
                            <th>Tổng giá sách</th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <tr id="row_@Model[i].ID">
                                <td>
                                    @Model[i].OrderID
                                </td>
                                <td>
                                    @Model[i].BookID
                                </td>
                                <td>
                                    @Model[i].Quantity
                                </td>
                                <td>
                                    @Model[i].Price
                                </td>
                                <td>
                                    @Model[i].TotalPrice
                                </td>
                                <td>
                                    <a class="btn btn-info" href="/Admin/OrderDetail/Edit/@Model[i].ID">
                                        <i class="halflings-icon white edit"></i>
                                    </a>
                                    <a id="deleteUser" class="btn btn-danger" href="#" data-id="@Model[i].ID">
                                        <i class="halflings-icon white trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div><!--/span-->
</div>

@section jsFooter{
    <script src="~/Assets/Admin/js/Controllers/OrderDetailController.js"></script>
}


