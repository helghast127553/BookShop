@using BookShop.Models.EF
@model List<Book>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Danh sách sách
}
<div class="row-fluid sortable ui-sortable">
    <div class="box span12">
        <div class="box-header" data-original-title="">
            <h2><i class="halflings-icon user"></i><span class="break"></span> Danh sách sách </h2>
        </div>
        <a href="/Admin/Book/Create" class="btn btn-primary">Thêm sách mới</a>
        <div class="box-content">
            <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper" role="grid">
                <table class="table table-striped table-bordered bootstrap-datatable datatable dataTable" id="DataTables_Table_0" aria-describedby="DataTables_Table_0_info">
                    <thead>
                        <tr>
                            <th>Tên sách</th>
                            <th>MetaTitle</th>
                            <th>Ảnh bìa</th>
                            <th>Giá sách</th>
                            <th>Mô tả sách</th>
                            <th>Số lượng</th>
                            <th>Mã nhà xuất bản</th>
                            <th>Mã chủ đề</th>
                            <th>Ngày tháng</th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <tr id="row_@Model[i].ID">
                                <td>
                                    @if (@Model[i].Name.Length > 35)
                                    {
                                        @Model[i].Name.Substring(0, 35)
                                    }
                                    else
                                    {
                                        @Model[i].Name
                                    }
                                    ...
                                </td>
                                <td>
                                    @if (@Model[i].MetaTitle.Length > 35)
                                    {
                                        @Model[i].MetaTitle.Substring(0, 35)
                                    }
                                    else
                                    {
                                        @Model[i].MetaTitle
                                    }
                                    ...
                                </td>
                                <td>
                                    @Model[i].Image
                                </td>
                                <td>
                                    @Model[i].Price
                                </td>
                                <td>
                                    @if (Model[i].Description.Length > 35)
                                    {
                                        @HttpUtility.HtmlDecode(Model[i].Description.Substring(0, 35))
                                    }
                                    else
                                    {
                                        @HttpUtility.HtmlDecode(Model[i].Description)
                                    }
                                    ...
                                </td>
                                <td>
                                    @Model[i].Quantity
                                </td>
                                <td>
                                    @Model[i].PublisherID
                                </td>
                                <td>
                                    @Model[i].BookCategoryID
                                <td>
                                    @Model[i].CreatedDate
                                </td>
                                <td>
                                    <a class="btn btn-info" href="/Admin/Book/Edit/@Model[i].ID">
                                        <i class="halflings-icon white edit"></i>
                                    </a>
                                    <a id="deleteUser" class="btn btn-danger" href="#" data-id="@Model[i].ID">
                                        <i class="halflings-icon white trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div><!--/span-->
</div>

@section jsFooter{
    <script src="~/Assets/Admin/js/Controllers/BookController.js"></script>
}

