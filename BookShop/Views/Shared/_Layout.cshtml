<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <link rel="stylesheet" href="~/Assets/Client/stylesheets/screen.css">
    <link rel="stylesheet" href="~/Assets/Client/stylesheets/fonts.css">
    <link href="~/Content/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Assets/Client/stylesheets/LayoutCSS.css" rel="stylesheet" />
    <link href="~/Assets/Client/stylesheets/MainMenuCSS.css" rel="stylesheet" />
    <link href="~/Assets/Client/stylesheets/MenuTopCSS.css" rel="stylesheet" />
    <link href="~/Assets/Client/stylesheets/HomeCSS.css" rel="stylesheet" />
    <link href="~/Assets/Client/nivo-slider/nivo-slider.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Assets/Client/nivo-slider/jquery.nivo.slider.js"></script>
    <script src="~/Assets/Client/nivo-slider/jquery.nivo.slider.pack.js"></script>
</head>

<body>
    <div id="FullPage">
        <section class="blank">
            <div class="flash">
                @RenderPage("MenuTop.cshtml")
            </div>

            <div class="flash success" id="MainMenu">
                <div id="search_box">
                    <form action="/tim-kiem" method= "post">
                        <input type="text" id="search_box" name="search_box" placeholder="Gõ từ khóa">
                        <div id="ImageSearch">
                            <button type="submit">
                                <img src="~/Images/imgSearch.png" alt="SearchBox" />
                            </button>
                        </div>
                    </form>
                </div>
                @{
                    Html.RenderAction("MainMenu", "Home");
                }
            </div>
        </section>

        <section id="divMenuSlider">
            <div id="divMenuLeft">
                <div class="activity">
                    @{
                        Html.RenderAction("MenuLeft", "Home");
                    }
                </div>
            </div>
            <div id="slider" class="nivoSlider">
                <img src="~/Images/Anh1.png" />
                <img src="~/Images/Anh2.png" />
                <img src="~/Images/Anh3.png" />
            </div>
            <div style="clear:both"></div>
        </section>

        <div id="Content">
            @RenderBody()
        </div>

        <div id="divPublisherAndTitle">
            <section>
                <div>
                    @{
                        Html.RenderAction("MenuTitle", "Home");
                    }
                </div>
                <hr>
            </section>

            <div style="clear:both"></div>

            <section class="blank items">
                <div id="divLeft">
                    <div class="item">
                        <div class="item-info">
                            @{
                                Html.RenderAction("MenuLeftFooter", "Home");
                            }
                        </div>
                        <img src="http://lorempixel.com/400/300/" alt="Image">
                    </div>                   
                </div>
                <div id="divRight">
                    @RenderSection("ContentRight", false)
                </div>
            </section>
        </div>

        <div style="clear: both"></div>

        <div>
            <a href="#" class="button button-buy">Chào mừng các bạn đã đến khóa học lập trình</a>
        </div>
    </div>

    <script type="text/javascript">
        $(document).ready(function () {
            $(window).on('load', function () {
                $('#slider').nivoSlider({
                    controlNav: false,
                    nextText: '',
                    prevText: ''
                });
            });
        });
    </script>
</body>
</html>