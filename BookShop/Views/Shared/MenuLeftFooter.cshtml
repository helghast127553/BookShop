@using BookShop.Models.EF
@model List<Publisher>

<h1 id="Publisher">Nhà xuất bản</h1>
@for (int i = 0; i < Model.Count; i++)
{
    <div class="Publishers">
        <i class="fa fa-book"></i>
        <a href="/sach/@Model[i].MetaTitle-@Model[i].ID"> @Model[i].Name</a>
    </div>
}
<div class="Publishers">
    <i class="fa fa-book"></i>
    <a href="/nha-xuat-ban-khac"> Nhà xuất bản khác...</a>
</div>

<style>
#Publisher {
    padding: 15px 0 15px 15px;
    color: white;
    width: 235px;
    background-color: #de5529;
}

.Publishers {
    font-weight: normal;
}
</style>
